<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scary Verse | Vision Eye</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet">

    <style>
        * {
            font-family: 'Roboto';
        }

        .column {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 100%;
            margin-top: 64px;
        }

        img {
            max-width: 100%;
            max-height: 312px;
        }

        h1 {
            display: block;
            font-size: 1.5em;
            margin-block-start: 0.67em;
            margin-block-end: 0.67em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            font-weight: bold;
        }

        .otp-group {
            -webkit-column-gap: 10px;
            column-gap: 10px;
            display: flex;
            max-width: 280px;
            width: 100%;
        }

        .otp-input {
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 24px;
            font-weight: 700;
            height: 48px;
            line-height: 1;
            padding: 0;
            text-align: center;
            width: 100%;
        }

        button {
            margin-top: 64px;
        }
    </style>
</head>
<body>

<div class="column container">
    <div class="column">
        <img src="/logo.png"/>
        <h1>Please enter your authentication OTP code</h1>
        <div class="otp-group">
            <input onfocus="handleFocus(this)" onkeyup="handleChange(this)" type="text" inputmode="numeric"
                   autocomplete="off"
                   pattern="[0-9]" maxlength="6" class="otp-input" value="">
            <input onfocus="handleFocus(this)" onkeyup="handleChange(this)" type="text" inputmode="numeric"
                   autocomplete="off"
                   pattern="[0-9]" maxlength="6" class="otp-input" value="">
            <input onfocus="handleFocus(this)" onkeyup="handleChange(this)" type="text" inputmode="numeric"
                   autocomplete="off"
                   pattern="[0-9]" maxlength="6" class="otp-input" value="">
            <input onfocus="handleFocus(this)" onkeyup="handleChange(this)" type="text" inputmode="numeric"
                   autocomplete="off"
                   pattern="[0-9]" maxlength="6" class="otp-input" value="">
            <input onfocus="handleFocus(this)" onkeyup="handleChange(this)" type="text" inputmode="numeric"
                   autocomplete="off"
                   pattern="[0-9]" maxlength="6" class="otp-input" value="">
            <input onfocus="handleFocus(this)" onkeyup="handleChange(this)" type="text" inputmode="numeric"
                   autocomplete="off"
                   pattern="[0-9]" maxlength="6" class="otp-input" value="">
        </div>
        <button onclick="handleSubmit(this)">Continue</button>
    </div>
</div>

<script>
    function handleFocus(input) {
        let currentElement = input;
        let previous = currentElement.previousElementSibling;
        while (currentElement.previousElementSibling !== null && currentElement.value === "" && previous.value === "") {
            currentElement = currentElement.previousElementSibling;
            previous = currentElement.previousElementSibling;
        }
        currentElement.focus();
    }

    function handleChange(input) {
        if (input.value === "") {
            input.previousElementSibling.focus();
        } else {
            if (input.nextElementSibling !== null) {
                input.nextElementSibling.focus();
            }
        }
    }

    function handleSubmit(button) {
        const inputs = document.getElementsByClassName("otp-input");
        let otp = "";
        for (let i of inputs) {
            otp += i.value;
        }

        window.location = "/oauth2/google/passcode/" + otp;
    }
</script>

</body>
</html>
